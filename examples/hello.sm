import std::io;

func main(): i8 {
    io::print("Enter your name: ");
    const name = io::readln();
    io::println("Your name is: {}", name);

    io::print("Enter your age: ");
    const age: u8 = io::read<u8>();
    io::println("You are {} years old!", age);

    if age > 30 {
        io::println("You are old!");
    } else {
        io::println("You are very young");
    }

    for var i in 0 to 10 {
        io::println(i);
    }

    ret 0;
}
